<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

     <ImageView
         android:id="@+id/f1_layout_img"
         android:layout_width="100dp"
         android:layout_height="100dp"
         android:scaleType="centerCrop"
         android:layout_marginTop="10dp"
         android:layout_marginLeft="10dp"

         />
<LinearLayout
    android:layout_marginLeft="20dp"
    android:layout_marginTop="15dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/f1_layout_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="我打发"
        android:layout_toRightOf="@id/f1_layout_img"
        android:layout_alignBottom="@id/f1_layout_img"
        />
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/f1_layout_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="男"
            android:layout_alignTop="@+id/f1_layout_img"
            android:layout_alignStart="@+id/f1_layout_jieshao" />
        <TextView
            android:id="@+id/f1_layout_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="21"
            android:layout_marginLeft="20dp"
            />
    </LinearLayout>

    <TextView

        android:id="@+id/f1_layout_jieshao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:text="我大汗发而发"
        android:layout_above="@+id/f1_layout_name"
        android:layout_alignEnd="@+id/f1_layout_name"
        android:layout_marginEnd="13dp" />


</LinearLayout>

    <RelativeLayout
        android:layout_marginTop="45dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/plocation"
                android:layout_marginRight="50dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:visibility="invisible"
                android:background="@drawable/locationp"/>

            <TextView
                android:id="@+id/f1_layout_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
